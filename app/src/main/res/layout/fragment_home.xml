<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="#dddddd"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/apartmentImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/apartmentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/apartmentImage"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="@string/apartment"
                android:textColor="#FFF"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="@dimen/vertical_margin_ten"
                    android:layout_marginLeft="@dimen/horizontal_margin_ten"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/vertical_margin_ten"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/iv_Notice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/noticeicons"
                        android:onClick="noticeBoard"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:visibility="visible" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="@dimen/vertical_margin_ten"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/horizontal_margin_ten"
                    android:layout_marginTop="@dimen/vertical_margin_ten"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/iv_Events"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/eventsicons"
                        android:onClick="eventSubmit"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="@dimen/vertical_margin_ten"
                    android:layout_marginLeft="@dimen/horizontal_margin_ten"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/vertical_margin_ten"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/iv_Bills"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/mybillsicons"
                        android:onClick="billsSubmit"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="@dimen/vertical_margin_ten"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/horizontal_margin_ten"
                    android:layout_marginTop="@dimen/vertical_margin_ten"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/iv_Amenities"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/amenitiesicons"
                        android:onClick="amenitiesSubmit"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="@dimen/vertical_margin_ten"
                    android:layout_marginLeft="@dimen/horizontal_margin_ten"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/vertical_margin_ten"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/iv_Feedback"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/requesticons"
                        android:onClick="feedbackSubmit"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="@dimen/vertical_margin_ten"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/horizontal_margin_ten"
                    android:layout_marginTop="@dimen/vertical_margin_ten"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/iv_feedbackss"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="feedbackSubmit"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:visibility="invisible" />

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@color/black_text_color" />

            <TextView
                android:id="@+id/advertisementcorner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="@string/advertisement"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_margin_ten"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/iv_AdsFirst"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/addfrst" />

                <ImageView
                    android:id="@+id/iv_AdsSecond"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/addsecond" />

            </LinearLayout>


            <android.support.v4.view.ViewPager
                android:id="@+id/viewpagerad"
                android:layout_width="match_parent"
                android:layout_height="150dp"></android.support.v4.view.ViewPager>
            <!--  <com.viewpagerindicator.CirclePageIndicator
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/circlepage"/>-->
        </LinearLayout>
    </LinearLayout>
</ScrollView>