<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/main_color">
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleheader"
            android:textSize="16sp"
            android:text="earn with us"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"/>
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_action_back"
            android:id="@+id/back"
            android:layout_marginLeft="16dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.What is Your Hobby ?"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/hobbyque"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editextblackline"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/hobbyque"
        android:id="@+id/hobbyans"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.What service can you provide to the occupants of your apartment ?"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/serviceque"
        android:layout_below="@+id/hobbyans"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editextblackline"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/serviceque"
        android:id="@+id/serviceans"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="true"
        android:background="@color/main_color"
        android:textColor="#ffffff"
        android:layout_below="@+id/serviceans"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>
    </RelativeLayout>
</RelativeLayout>