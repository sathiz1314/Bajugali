<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/iv_submitViewAdd"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/tv_status_submitViewAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_category_submitViewAdd"
                android:layout_marginLeft="@dimen/horizontal_margin_twenty"
                android:layout_marginTop="@dimen/vertical_margin_ten"
                android:layout_toEndOf="@+id/iv_submitViewAdd"
                android:layout_toRightOf="@+id/iv_submitViewAdd"
                android:text="title" />

            <TextView
                android:id="@+id/tv_title_submitViewAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_margin_twenty"
                android:layout_toEndOf="@+id/iv_submitViewAdd"
                android:layout_toRightOf="@+id/iv_submitViewAdd"
                android:text="titlesssss" />

            <TextView
                android:id="@+id/tv_category_submitViewAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_submitViewAdd"
                android:layout_marginLeft="@dimen/horizontal_margin_twenty"
                android:layout_marginTop="@dimen/vertical_margin_ten"
                android:layout_toEndOf="@+id/iv_submitViewAdd"
                android:layout_toRightOf="@+id/iv_submitViewAdd"
                android:text="titles" />

            <ProgressBar

                android:id="@+id/progressGlide"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_status_submitViewAdd"
                android:layout_toStartOf="@+id/tv_status_submitViewAdd"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>